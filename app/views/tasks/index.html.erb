<h1>タスク管理アプリ（一覧画面）</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>ステータス</th>
      <th>期日</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline_at %></td>
        <td>
          <%= link_to "詳細", task %>
          <%= link_to "編集", edit_task_path(task) %>
          <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除してよろしいですか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "新規作成", new_task_path %>
</p>



